
<div class="row">
    
    <div class="col-sm-4">
        <h1>Create categories</h1>
        <form action="/admin/categories/create" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter Title" class="form-control">
            </div>
            <button class="btn btn-primary btn-sm">Create categories</button>
        </form>
    </div>
    <br><hr>

    <div class="col-sm-8">
        <h1>categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {{#each Category}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{generateTime date 'MMM Do YYYY'}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-warning btn-sm">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>