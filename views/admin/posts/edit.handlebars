<h2>Edit Post</h2>

<form action="/admin/posts/edit" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="form-check" style="margin-left: 20px;">
        <label for="allowComments">
            <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-input" id="allowComments"> Allow Comments
        </label>
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea cols="30" rows="8" name="body" class="form-control" id="body">{{post.body}}</textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>